@model Snake.ViewModels.LoginViewModel
<div id="login" class="mt-5">
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div class="login-box col-md-12">
                    <form id="login-form" class="form" action="" method="post">
                        <h3 class="text-center text-info">Login</h3>
                        <div class="form-group">
                            <label asp-for="Login"></label>
                            <input class="form-control d-block" style="width: 100%" asp-for="Login" placeholder="Login" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control d-block showpassword" style="width: 100%" id="password" asp-for="Password" placeholder="Password" />
                        </div>

                        <div asp-validation-summary="All"></div>

                        <div class="form-group">
                            <label asp-for="RememberMe"></label>
                            <input class="form-input" asp-for="RememberMe" />
                        </div>
                        <div class="form-group">
                            <button class="btn btn-info" type="button" name="showpassword" id="showpassword" value="Show Password">Show Password</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        <a href="Register" class="link">Register here</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>